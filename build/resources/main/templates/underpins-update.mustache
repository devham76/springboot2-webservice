{{>layout/header}}

<h1>응원글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <input type="hidden" class="form-control" id="id" value={{underpin.id}}>
            <input type="hidden" class="form-control" id="writer" value={{underpin.writer}}>
            <div class="form-group">
                <label for="content"> 응원글 </label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요">{{underpin.content}}</textarea>
            </div>
            <div class="form-group">
                <input type="hidden" id="get_is_append" value="{{underpin.isAppend}}">
                <label for="check_append">적용여부 </label>
                <div class="custom-control custom-radio">
                    <input id="append" name="isAppend" type="radio" class="custom-control-input"  value="1">
                    <label class="custom-control-label" for="append">적용</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="append_not" name="isAppend" type="radio" class="custom-control-input"  value="0">
                    <label class="custom-control-label" for="append_not">미적용</label>
                </div>
            </div>
        </form>
        <a href="/underpins" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>


{{>layout/footer}}
<script src="/js/app/underpins.js"></script>
<script type="text/javascript">
    $(function(){
        var isAppend_val = $("#get_is_append").val();
        if(isAppend_val == 1)
            $("input[name=isAppend]").eq(0).attr("checked", true);
        else
            $("input[name=isAppend]").eq(1).attr("checked", true);
    });
</script>
