{{>layout/header}}

<h1>응원글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <input type="hidden" class="form-control" id="writer" value={{user.email}}>
            <div class="form-group">
                <label for="content"> 응원글 </label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="check_append">적용여부 </label>
                <div class="custom-control custom-radio">
                    <input id="append" name="isAppend" type="radio" class="custom-control-input" checked="" required="" value="1">
                    <label class="custom-control-label" for="append">적용</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="append_not" name="isAppend" type="radio" class="custom-control-input" required="" value="0">
                    <label class="custom-control-label" for="append_not">미적용</label>
                </div>
            </div>

        </form>
        <a href="/underpins" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/footer}}
<script src="/js/app/underpins.js"></script>