{{>layout/header}}

<div class="container-fluid">
    <div class="row">
        {{>layout/sidebar}}
        <main role="main" class="col-md-11 ml-sm-auto px-4" style="padding-top:60px">
            {{>layout/headTitle}}
            <div class="col-md-12">
                <div class="row">
                <div class="col-md-6">
                    <a href="/posts/save" role="button" class="btn btn-secondary">글 등록</a>
                </div><br>
            </div>
                <!-- 목록 출력 영역 -->
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>No</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>최종수정일</th>
                    </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#posts}}
                        <tr>
                            <td>{{id}}</td>
                            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                            <td>{{author}}</td>
                            <td>{{modifiedDate}}</td>
                        </tr>
                    {{/posts}}
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
{{>layout/footer}}
<!-- index.js 추가 -->
<script src="/js/app/index.js"></script>